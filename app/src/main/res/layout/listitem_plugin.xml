<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/divider_width"
    android:background="@color/white"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:elevation="@dimen/elevation_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/plugin_icon"
            android:layout_width="@dimen/size_avatar_big"
            android:layout_height="@dimen/size_avatar_big"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_mid"
            android:layout_marginTop="@dimen/space_mid"
            android:layout_marginBottom="@dimen/space_mid"
            android:layout_marginEnd="@dimen/space_mid"
            android:src="@color/placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/plugin_icon">

            <TextView
                android:id="@+id/plugin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="风信日报"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/plugin_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textAlphaGray"
                android:textSize="@dimen/text_small"
                tools:text="一览风信的每日动态"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>